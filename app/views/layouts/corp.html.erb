<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag 'screen.css', :media => 'screen,projection' %>
  <%= stylesheet_link_tag 'print.css', :media => 'print' %>

  <!--[if lt IE 8]><stylesheet_link_tag 'ie.css' media='screen, projection'><![endif]-->

  <%= stylesheet_link_tag 'plugins/fancy-type/screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'application.css', :media => 'screen,projection' %>
	<%= stylesheet_link_tag 'jquery.jscrollpane.css', :media => 'screen,projection' %>
  
	<%= stylesheet_link_tag 'http://cdn.webrupee.com/font', :media=>'screen,projection' %>

  <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'jit' %>
  <%= javascript_include_tag 'jquery-1.5.2.min.js'%>
  <%= javascript_include_tag 'jquery-ui-1.8.11.custom.min.js'%>
	<%= javascript_include_tag 'jquery.jscrollpane.min.js'%>
	<%= javascript_include_tag 'jquery.printElement.min.js'%>
  <%= javascript_include_tag "booklet/jquery.easing.1.3.js" %>
  <%= javascript_include_tag "booklet/jquery.booklet.1.2.0.min.js" %>
  <%= stylesheet_link_tag "jquery.booklet.1.2.0.css", :media=>"screen, projection, tv" %>
  
  <%= csrf_meta_tag %>

	<script type="text/javascript">
	    $(document).ready(function() {
					$('.scroll-pane').jScrollPane();
	        <%= yield :javascript %>
	    });
	</script>
	
</head>

<body>

<div class="container  background">	
	<% if user_signed_in? and current_user.isKid? %>
    <%= render :partial => "layouts/kids_nav" %>
  <% else %>
      <%= render :partial => "layouts/main_nav" %>
  <% end %>
	<div class="span-25 prepend-2" >
        <div class="span-18 breadcrumbs">
          <%= breadcrumbs.render(:format => :inline, :separator => '>') %>
        </div>
  			<section class="span-18 round">
				<% flash.each do |key, value| %>
					<div class="flash <%= key %>"><%= value %></div>
				<% end %>
        </section>
        <br/>
    <%= yield %>
	</div>

	<div class="span-25 footer quiet">
		<span class="span-8 prepend-1"><p id="footer">Copyright Â© 2011 JustBooks, All rights reserved. </p></span>
    <span class="span-3"><%= link_to "Contact Us", contact_path %> </span>
    <span class="span-5"><%= link_to "Stores", stores_path %> (<a href="http://justbooksclc.com/StoreLocations.action" target="_blank"> Locations </a>) </span>
    <span class="span-3"><%= link_to "About Us", about_path %></span>
    <span class="span-3"><%= link_to "Privacy Policy", privacypolicy_path %> </span>
    <span class="span-3"><%= link_to "Terms of Use", tnc_path %></span>
	</div>


</div>

</body>
</html>
