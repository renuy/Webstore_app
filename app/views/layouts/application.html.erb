<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag 'screen.css', :media => 'screen,projection' %>
  <%= stylesheet_link_tag 'print.css', :media => 'print' %>

  <!--[if lt IE 8]><stylesheet_link_tag 'ie.css' media='screen, projection'><![endif]-->

  <%= stylesheet_link_tag 'plugins/fancy-type/screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'application.css', :media => 'screen,projection' %>
	<%= stylesheet_link_tag 'jquery.jscrollpane.css', :media => 'screen,projection' %>
  
	<%= stylesheet_link_tag 'http://cdn.webrupee.com/font', :media=>'screen,projection' %>

  <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'jit' %>
	<%= javascript_include_tag 'jquery.jscrollpane.min.js'%>
	<%= javascript_include_tag 'jquery.printElement.min.js'%>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js" type="text/javascript"></script>
  <%= javascript_include_tag "booklet/jquery.easing.1.3.js" %>
  <%= javascript_include_tag "booklet/jquery.booklet.1.2.0.min.js" %>
  <%= stylesheet_link_tag "jquery.booklet.1.2.0.css", :media=>"screen, projection, tv" %>

  <%= csrf_meta_tag %>

	<script type="text/javascript">
	    $(document).ready(function() {
					$('.scroll-pane').jScrollPane();
	        <%= yield :javascript %>
	    });
	</script>
	
</head>

<body>

<div class="container  background">	
	<div class="span-25">
		<div class="span-5 right">
    <% if user_signed_in? %>
      Signed in as <%= current_user.email %>. Not you?
      <%= link_to "Sign out", destroy_user_session_path %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
    <% end %>
    </div>
    <p class="masthead"><%= image_tag('JBK.jpg', :id => 'logo')%></p>
    	

  </div>
  <div class="span-24 prepend-2" style="position:absolute; top:58px">
      <div id="mainNav" >
            <ul>
            	<li class="mainNav"><%= link_to "HOME", root_path %></li>
            	<li class="mainNavSeperator01"><spacer type="block" width="3"></spacer></li>
            	<li class="mainNav"><%= link_to "FIND A BOOK", catalogue_path %></li>
            	<li class="mainNavSeperator01"><spacer type="block" width="3"></spacer></li>
            	<li class="mainNav"><a>FUN CORNER</a></li>
            	<li class="mainNavSeperator01"><spacer type="block" width="3"></spacer></li>
            	<li class="mainNav"><a>READER'S CLUB</a></li>
            	<li class="mainNavSeperator01"><spacer type="block" width="3"></spacer></li>
            </ul>
            <!-- nav ends -->
            <!-- search section -->
            <div class="searchSection">
              <%= form_tag titles_path, :id => 'searchForm', :method => 'get' do -%>
                <%= text_field_tag :query, params[:query], :size => 17, :class=>'searchTextbox' %>
                <%= image_submit_tag("search-normal.png", :id=>'submit_btn', :class=>'search_button', :onmouseout=>"Collectionapp.rollout(this);", :onmouseover=>"Collectionapp.rollin(this);" )%>
                <%= hidden_field_tag :queryTitleId, '' %>

                <%= hidden_field_tag :facetCategory, params[:facetCategory] %>
                <%= hidden_field_tag :facetPublisher, params[:facetPublisher] %>
                <%= hidden_field_tag :facetAuthor, params[:facetAuthor] %>
              <% end -%>
            </div>
            <!-- search section ends -->
      	</div>
        <!-- main navigation ends -->
      <div class="right">
        
      </div>
    
	</div>
	<div class="span-25 prepend-2" style="height:506px;">
		<%= yield %>
	</div>

	<div class="span-25">
		<p class="footer quiet"> <p  id="footer">Copyright Â© 2011 JustBooks, All rights reserved. <a>Site Map</a> <a>Privacy Policy</a> <a>Terms of Use </a> </p></p>
	</div>

</div>

</body>
</html>
