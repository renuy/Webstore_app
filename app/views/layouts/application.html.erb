<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag 'screen.css', :media => 'screen,projection' %>
  <%= stylesheet_link_tag 'print.css', :media => 'print' %>

  <!--[if lt IE 8]><stylesheet_link_tag 'ie.css' media='screen, projection'><![endif]-->

  <%= stylesheet_link_tag 'plugins/fancy-type/screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'application.css', :media => 'screen,projection' %>
	<%= stylesheet_link_tag 'jquery.jscrollpane.css', :media => 'screen,projection' %>
  
	<%= stylesheet_link_tag 'http://cdn.webrupee.com/font', :media=>'screen,projection' %>

  <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'jit' %>
	<%= javascript_include_tag 'jquery.jscrollpane.min.js'%>
	<%= javascript_include_tag 'jquery.printElement.min.js'%>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js" type="text/javascript"></script>
  <%= javascript_include_tag "booklet/jquery.easing.1.3.js" %>
  <%= javascript_include_tag "booklet/jquery.booklet.1.2.0.min.js" %>
  <%= stylesheet_link_tag "jquery.booklet.1.2.0.css", :media=>"screen, projection, tv" %>

  <%= csrf_meta_tag %>

	<script type="text/javascript">
	    $(document).ready(function() {
					$('.scroll-pane').jScrollPane();
	        <%= yield :javascript %>
	    });
	</script>
	
</head>

<body>

<div class="container  background">	
	<% if user_signed_in? and current_user.isKid? %>
    <%= render :partial => "layouts/kids_nav" %>
  <% else %>
      <%= render :partial => "layouts/main_nav" %>
  <% end %>
	<div class="span-25 prepend-2" style="height:506px;">
  			<section class="span-22 round">
				<% flash.each do |key, value| %>
					<div class="flash <%= key %>"><%= value %></div>
				<% end %>
        </section>
    <%= yield %>
	</div>

	<div class="span-25">
		<p class="footer quiet"> <p  id="footer">Copyright Â© 2011 JustBooks, All rights reserved. <a>Site Map</a> <a>Privacy Policy</a> <a>Terms of Use </a> </p></p>
	</div>

</div>

</body>
</html>
